# TaskMan v2 Environment Configuration
# Copy this file to .env and update values for your environment

# ==========================================
# DATABASE PASSWORDS
# ==========================================
AUTH_DB_PASSWORD=change_me_auth_password
AUTHZ_DB_PASSWORD=change_me_authz_password
USER_DB_PASSWORD=change_me_user_password
IAM_DB_PASSWORD=change_me_iam_password
TASK_DB_PASSWORD=change_me_task_password
AUDIT_DB_PASSWORD=change_me_audit_password
NOTIFICATION_DB_PASSWORD=change_me_notification_password
KONG_DB_PASSWORD=change_me_kong_password

# ==========================================
# REDIS
# ==========================================
REDIS_PASSWORD=change_me_redis_password

# ==========================================
# RABBITMQ
# ==========================================
RABBITMQ_USER=taskman
RABBITMQ_PASSWORD=change_me_rabbitmq_password

# ==========================================
# VAULT
# ==========================================
VAULT_TOKEN=change_me_vault_token

# ==========================================
# GRAFANA
# ==========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_me_grafana_password

# ==========================================
# JWT SECRETS (Generate with: openssl rand -base64 64)
# ==========================================
JWT_ACCESS_SECRET=change_me_jwt_access_secret_min_32_chars
JWT_REFRESH_SECRET=change_me_jwt_refresh_secret_min_32_chars

# ==========================================
# SERVICE CONFIGURATION
# ==========================================
ENVIRONMENT=development
LOG_LEVEL=debug
ENABLE_TRACING=true
ENABLE_METRICS=true

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ==========================================
# SESSION CONFIGURATION
# ==========================================
SESSION_TTL_HOURS=168  # 7 days
ACCESS_TOKEN_TTL_MINUTES=60  # 1 hour
REFRESH_TOKEN_TTL_HOURS=168  # 7 days

# ==========================================
# EMAIL CONFIGURATION (for Notification Service)
# ==========================================
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@taskman.local

# ==========================================
# EXTERNAL SERVICES
# ==========================================
# AWS S3 (for file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=taskman-uploads

# Sentry (error tracking)
SENTRY_DSN=

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_MFA=false
ENABLE_OAUTH=false
ENABLE_LDAP=false
ENABLE_SSO=false